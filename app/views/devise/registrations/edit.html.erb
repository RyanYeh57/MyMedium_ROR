<h2 class="title is-2">編輯 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username, '使用者帳號' %><br />
    <div class="control is-primary">
      <%= f.text_field :username, autofocus: true, class:'input is-medium' %>
      <p class="help is-danger">
        範例:Ryan57
      </p>
    </div>
  </div>

  <div class="field">
    <%= f.label :avatar, '大頭貼' %><br />
    <%= f.file_field :avatar%>
  </div>

    <%= avatar(current_user) %>
 
    <div class="field">
    <%= f.label :intro, '個人簡介' %><br />
    <div class="control is-primary">
      <%= f.text_area :intro, class:'textarea is-medium is-info', rows: 5, placeholder: '內容約100字' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <div class="control is-primary">
      <%= f.email_field :email, autocomplete: "email", class:'input is-medium' %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <div class="control is-primary">
    <%= f.password_field :password, autocomplete: "new-password", class: 'input is-medium' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <div class="control is-primary">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input is-medium' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "更新資料", class:'button is is-primary' %>
  </div>
<% end %>
<hr>
<div>
  <%= link_to "返回", :back %>
  <%= link_to "刪除帳戶", registration_path(resource_name), data: { confirm: "確定刪除?!" }, method: :delete %>    
</div>

