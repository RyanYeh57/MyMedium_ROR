<h2 class="title is-2">註冊會員</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <div class="control">    
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-danger', type: 'email', placeholder: 'Email input' %>
    <p class="help is-danger">必需填寫</p>
  </div>

  <div class="field">
    <%= f.label :密碼 %>
    <div class="control is-primary">  
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 位數字)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" , class: 'input' %>
   </div>
  </div>

  <div class="field">
    <%= f.label :密碼確認 %><br />
    <div class="control is-primary">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "註冊" , class: 'button is-link' %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

