<h2 class="title is-2">忘記密碼?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <div class="control">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'input is-danger' %>
  </div></br>

  <div class="actions">
    <%= f.submit "發送重置密碼信", class: 'button is-danger is-rounded' %>
  </div></br>
<% end %>

<%= render "devise/shared/links" %>
