<h2 class="title is-2">故事列表</h2>

<% @stories.each do |story| %>
  <div class="content">
    <h2 class="title"><%= story.title %>
    <%= content_tag :span, '已發佈', class: 'tag is-primary' if story.published? %>
    </h2>
    <p><%= story.content %></p>
    <p>
      最後編輯時間：<%= time_ago_in_words(story.updated_at) %>
      <%= link_to "編輯", edit_story_path(story), class:'button is-small is-primary' %>
      <%= link_to "刪除", story_path(story), class:'button is-small is-danger', method: 'delete', data: {comfirm: "是否確定刪除?!"}  %>
    </p>
  </div><hr>
<% end %>